<h1> Categories </h1>

<table class="table table-striped">
  <tr>

    <th>Name OF Category</th>
    <th> Description</th>
  </tr>

  <% categories.forEach(function(category) { %>

    <tr>
      <td> <a href="/category/detail?id=<%= category._id %>"> <%= category.name %> </a></td>
      <td> <%= category.description %> </td>
    </tr>
  <% }) %>

</table>